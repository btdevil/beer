
@{
    ViewBag.Title = "MyStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/myStock")
}

<div class="row">
    <div class="col-lg-12">
        <h2>My Stock</h2>

        <form data-bind="submit: updateStock">
            <label for="malts">Malts</label>
            <div class="form-group">
                <select id="malts" data-bind="options: Malts.Malt, optionsText: 'malt', optionsValue : 'id', selectedOptions: myMalts.malts, select2: {selection: myMalts.malts}" size="10" multiple class="form-control" style="width: 100%"></select>
                <br />
            </div>
            <label for="hops">Hops</label>
            <div class="form-group">
                <select id="hops" data-bind="options: Hops.Hop, optionsText: 'hops', optionsValue : 'id', selectedOptions: myHops.hops, select2: {selection: myHops.hops}" size="10" multiple class="form-control" style="width: 100%"></select>
            </div>

            <label for="yeast">Yeast</label>
            <div class="form-group">
                <select id="yeast" data-bind="options: Yeasts.Yeast, optionsText: 'yeastName', optionsValue : 'id', selectedOptions: myYeasts.yeasts, select2: {selection: myYeasts.yeasts}" size="10" multiple class="form-control" style="width: 100%"></select>
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>

    </div>
    </div>


